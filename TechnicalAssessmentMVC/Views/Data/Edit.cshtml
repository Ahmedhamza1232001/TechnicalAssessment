@model List<TechnicalAssessmentMVC.Models.Invoice>


<div class="container mt-4">
    <h2 class="mb-4">Edit Invoices</h2>
    <form method="post" asp-action="Edit">
        <input type="hidden" name="fileName" value="@ViewBag.FileName" />
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Inv No</th>
                    <th>Inv CURNo</th>
                    <th>Inv Date</th>
                    <th>Customer Code</th>
                    <th>Customer Name</th>
                    <th>Reg Country APrev</th>
                    <th>Total Value Before Taxing</th>
                    <th>Total Value After Taxing</th>
                    <th>Taxing Value</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="text" class="form-control" name="[@i].InvNo" value="@Model[i].InvNo" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].InvCURNo" value="@Model[i].InvCURNo" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].InvDate" value="@Model[i].InvDate" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].CustomerCode" value="@Model[i].CustomerCode" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].CustomerName" value="@Model[i].CustomerName" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].RegCountryAPrev" value="@Model[i].RegCountryAPrev" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].TotalValueBeforeTaxing" value="@Model[i].TotalValueBeforeTaxing" readonly />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].TotalValueAfterTaxing" value="@Model[i].TotalValueAfterTaxing" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="[@i].TaxingValue" value="@Model[i].TaxingValue" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

