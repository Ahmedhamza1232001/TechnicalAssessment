@model IEnumerable<TechnicalAssessmentMVC.Models.Invoice>


<div class="container mt-4">
    <h2 class="mb-4">@ViewBag.FileName</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Inv No</th>
                <th>Inv CURNo</th>
                <th>Inv Date</th>
                <th>Customer Code</th>
                <th>Customer Name</th>
                <th>Reg Country APrev</th>
                <th>Total Value Before Taxing</th>
                <th>Taxing Value</th>
                <th>Total Value After Taxing</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.InvNo</td>
                    <td>@invoice.InvCURNo</td>
                    <td>@invoice.InvDate</td>
                    <td>@invoice.CustomerCode</td>
                    <td>@invoice.CustomerName</td>
                    <td>@invoice.RegCountryAPrev</td>
                    <td>@invoice.TotalValueBeforeTaxing</td>
                    <td>@invoice.TaxingValue</td>
                    <td>@invoice.TotalValueAfterTaxing</td>
                </tr>
            }
        </tbody>

    </table>
    <form method="get" asp-action="Edit">
        <input type="hidden" name="fileName" value="@ViewBag.FileName" />
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

